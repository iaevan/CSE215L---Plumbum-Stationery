<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopViewCtl">
   <children>
      <Label text="Plumbum Stationery BD" />
      <ScrollPane>
         <content>
            <TilePane fx:id="productGrid" hgap="10.0" prefColumns="4" vgap="10.0">
              <padding>
                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </padding>
            </TilePane>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="cartButton" onAction="#handleCartButton" text="Cart" />
            <Button fx:id="loginButton" onAction="#handleLoginButton" text="Login" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>